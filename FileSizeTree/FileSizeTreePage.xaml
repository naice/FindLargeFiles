<UserControl x:Class="FileSizeTree.FileSizeTreePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FileSizeTree"
    xmlns:convert="clr-namespace:FileSizeTree.ValueConverter"
    xmlns:behaviors="clr-namespace:FileSizeTree.Behaviors"
    xmlns:controls="clr-namespace:FileSizeTree.Controls"
    xmlns:core="clr-namespace:FileSizeTree.Core;assembly=FileSizeTree.Core"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <convert:CollectionViewSortedConverter x:Key="TreeCollectionViewSortedConverter" PropertyName="Size" SortDirection="Descending"/>
        <convert:ElementPercentageToRootSizeConverter x:Key="ElementPercentageToRootSizeConverter"/>
        <convert:BytesConverter x:Key="BytesConverter"/>
        <convert:BytesConverter x:Key="BytesConverterAutomatic" IsAutoDetecting="True"/>
        <convert:ToVisibilityConverter x:Key="ToVisibilityConverter"/>
        <convert:ToVisibilityConverter x:Key="ToVisibilityConverterInverted" IsInverted="True"/>
        <convert:ToBooleanConverter x:Key="ToBooleanConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid
            x:Name="TreeRoot">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <materialDesign:Card
                Padding="8"
                Margin="16"
                Grid.Row="0">
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        ToolTip="Open and fetch folder sizes."
                        Margin="8"
                        Command="{Binding OpenDirectory}"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding OpenDirectory.IsExecuting}"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <materialDesign:PackIcon
                            Kind="FolderOpen"
                            Height="24"
                            Width="24" />
                    </Button>
                    <Button
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        ToolTip="Refresh folder"
                        Margin="8"
                        Command="{Binding RefreshDirectory}"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding RefreshDirectory.IsExecuting}"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <materialDesign:PackIcon
                            Kind="Refresh"
                            Height="24"
                            Width="24" />
                    </Button>
                </StackPanel>
            </materialDesign:Card>

            <GroupBox
                Header="{Binding}"
                Grid.Row="1"
                Style="{DynamicResource MaterialDesignCardGroupBox}"
                Padding="0"
                Margin="16,0,16,16">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <DockPanel
                            Margin="8"
                            LastChildFill="True"
                            HorizontalAlignment="Stretch">
                            <materialDesign:PackIcon
                                Kind="FolderSearch"
                                Height="32"
                                Width="32"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left" />
                            <TextBlock
                                Text="{Binding Element, Converter={StaticResource BytesConverter}, Mode=OneWay}"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Width="100"
                                Margin="0,0,20,0"
                                TextAlignment="Right"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Right" />
                            <TextBlock
                                Margin="12,0,0,0"
                                Text="{Binding Element.Path}"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                FontSize="15"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left" />
                        </DockPanel>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <Grid>
                    <TreeView
                        ItemsSource="{Binding Element.Children, Converter={StaticResource TreeCollectionViewSortedConverter}}">
                        <e:Interaction.Behaviors>
                            <behaviors:BindableSelectedItemBehavior
                                SelectedItem="{Binding TreeViewSelected, Mode=TwoWay}" />
                        </e:Interaction.Behaviors>
                        <TreeView.ItemContainerStyle>
                            <Style
                                TargetType="TreeViewItem"
                                BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                <Setter
                                    Property="HorizontalAlignment"
                                    Value="Stretch" />
                                <Setter
                                    Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.Resources>
                            <HierarchicalDataTemplate
                                DataType="{x:Type core:Element}"
                                ItemsSource="{Binding Children, Converter={StaticResource TreeCollectionViewSortedConverter}}">
                                <DockPanel
                                    LastChildFill="True"
                                    HorizontalAlignment="Stretch"
                                    Tag="{Binding RelativeSource={RelativeSource AncestorType=TreeView}, Path=DataContext}">
                                    <DockPanel.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Header="Open"
                                                Command="{Binding PlacementTarget.Tag.Open, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ContextMenu}}"
                                                CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon
                                                        Kind="OpenInNew" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator />
                                            <MenuItem
                                                Header="Scope to this"
                                                Command="{Binding PlacementTarget.Tag.ScopeToThis, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ContextMenu}}"
                                                CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon
                                                        Kind="FolderSearch" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator />
                                            <MenuItem
                                                Header="Delete"
                                                Foreground="#FFF44336"
                                                Command="{Binding PlacementTarget.Tag.Delete, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ContextMenu}}"
                                                CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon
                                                        Foreground="#FFF44336"
                                                        Kind="TrashCanOutline" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator />
                                            <MenuItem
                                                Header="Properties"
                                                Command="{Binding PlacementTarget.Tag.Properties, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ContextMenu}}"
                                                CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon
                                                        Kind="FileDocumentBoxOutline" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </DockPanel.ContextMenu>
                                    <!-- FILE SIZE -->
                                    <TextBlock
                                        Text="{Binding Converter={StaticResource BytesConverter}, Mode=OneWay}"
                                        DockPanel.Dock="Right"
                                        Width="100"
                                        TextAlignment="Right"
                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                        Margin="3 2"
                                        HorizontalAlignment="Right" />
                                    <!-- FILE SIZE PERCENTAGE IN CONTEXT-->
                                    <ProgressBar
                                        DockPanel.Dock="Right"
                                        Minimum="0"
                                        Maximum="1"
                                        Value="{Binding Converter={StaticResource ElementPercentageToRootSizeConverter}, Mode=OneWay}"
                                        MinWidth="200"
                                        Height="10" />
                                    <!-- FILE NAME -->
                                    <TextBlock
                                        Text="{Binding Name}"
                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                        Margin="3 2" />
                                </DockPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding Element, Converter={StaticResource ToVisibilityConverterInverted}}">
                        <materialDesign:PackIcon 
                            Foreground="{StaticResource MaterialDesignDarkBackground}"
                            Width="256" Height="256"
                            Kind="FileTree"/>
                    </Grid>
                    <materialDesign:DialogHost
                        IsOpen="{Binding PropertiesElement, Converter={StaticResource ToBooleanConverter}}"
                        Style="{StaticResource MaterialDesignEmbeddedDialogHost}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <materialDesign:DialogHost.DialogContent>
                            <Grid
                                Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="Auto" />
                                    <RowDefinition
                                        Height="*" />
                                    <RowDefinition
                                        Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    Text="{Binding PropertiesElement.Name}" />
                                <Separator
                                    Grid.Row="1"
                                    Style="{StaticResource MaterialDesignSeparator}"
                                    Margin="8 0 8 0" />
                                <ScrollViewer
                                    Grid.Row="2">
                                    <StackPanel>
                                        <TextBlock
                                            Style="{StaticResource MaterialDesignTextBlock}"
                                            Text="{Binding PropertiesElement.Path}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Style="{StaticResource MaterialDesignTextBlock}">
                                            <Run
                                                Text="Total File Count:" />
                                            <Run
                                                Text="{Binding PropertiesElement.FileCount}" />
                                        </TextBlock>
                                        <TextBlock
                                            Style="{StaticResource MaterialDesignTextBlock}">
                                            <Run
                                                Text="{Binding PropertiesElement, Converter={StaticResource BytesConverterAutomatic}}" />
                                        </TextBlock>
                                    </StackPanel>
                                </ScrollViewer>
                                <Button
                                    Grid.Row="3"
                                    Command="{Binding CloseProperties}"
                                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                                    Content="Close" />
                            </Grid>
                        </materialDesign:DialogHost.DialogContent>
                    </materialDesign:DialogHost>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
